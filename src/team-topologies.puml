' A PlantUML extension for creating Team Topologies diagrams
' Based on the book "Team Topologies" by Matthew Skelton and Manuel Pais

' Namespace declaration to avoid conflicts
!define TEAMTOPO_PUML
!ifndef TEAMTOPO_VERSION
  !define TEAMTOPO_VERSION 0.1.0
!endif

' Common styles and colors
!define TEAM_BG_COLOR #FFFFFF
!define TEAM_BORDER_COLOR #333333
!define TEAM_TEXT_COLOR #333333

' Basic skinparam settings
skinparam {
  DefaultTextAlignment center
  RoundCorner 10
  Shadowing false
}

' Element Styles
skinparam rectangle<<team>> {
  BackgroundColor $TEAM_BG_COLOR
  BorderColor $TEAM_BORDER_COLOR
  FontColor $TEAM_TEXT_COLOR
}

' Basic macros (to be expanded in future tickets)
!unquoted procedure TeamRect($alias, $label)
  rectangle "$label" <<team>> as $alias
!endprocedure

' Usage example:
' @startuml
' !include team-topologies.puml
' TeamRect("My Team")
' @enduml
